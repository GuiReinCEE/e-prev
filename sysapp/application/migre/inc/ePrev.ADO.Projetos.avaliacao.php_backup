        if (trim($entidade->get_dt_fechamento_avaliado())!="")
        {
            $this->dal->setAttribute( "{dt_fechamento_avaliado}", ", dt_fechamento_avaliado = " . $entidade->get_dt_fechamento_avaliado() );
		}
        else
        {
