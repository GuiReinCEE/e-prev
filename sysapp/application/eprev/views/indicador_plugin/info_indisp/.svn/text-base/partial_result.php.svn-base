<?php
$body=array();
$head = array( 
	'#', 'Mês', 'Expediente (min)', 'A - Sem consid <br>energia elétrica', 'B - Considerando <br>energia elétrica', 'A - % Sem consid <br>energia elétrica', 'B - % Considerando <br>energia elétrica','Meta', ''
);

$tabela = indicador_tabela_aberta( intval( enum_indicador::INFO_INDISPONIBILIDADE ) );

if(sizeof($tabela)<=0)
{
	echo "Não foi identificado período aberto para o Indicador";
}
else
{
	$contador_ano_atual=0;
	$contador = sizeof($collection);
	$media_ano=array();
	$a_data=array(0, 0);
	foreach( $collection as $item )
	{
		$a_data = explode( "/", $item['mes_referencia'] );

		if( $item['fl_media']=='S' )
		{
			$link = '';

			$referencia = " Média de " . $item['ano_referencia'];

			$nr_expediente = '';
			$nr_minutos_a = '';
			$nr_minutos_b = '';
			$nr_percentual_a = '';
			$nr_percentual_b = number_format($item["nr_percentual_b"],2).' %';
			$nr_meta = number_format($item["nr_meta"],2).' %';
		}
		else
		{
			$link = anchor("indicador_plugin/info_indisp/detalhe/" . $item["cd_info_indisp"], "editar");

			$referencia = $item['mes_referencia'];

			$nr_expediente = $item["nr_expediente"];
			$nr_minutos_a = $item["nr_minutos_a"];
			$nr_minutos_b = $item["nr_minutos_b"];
			$nr_percentual_a = number_format( $item["nr_percentual_a"], 2 ).' %';
			$nr_percentual_b = number_format( $item["nr_percentual_b"], 2 ).' %';
			$nr_meta = number_format( $item["nr_meta"], 2 ).' %';
		}

		if( intval($item['ano_referencia']) == intval($tabela[0]['nr_ano_referencia']) && $item['fl_media']!='S' )
		{
			$contador_ano_atual++;
			$media_ano[] = $nr_percentual_a;
		}

		$body[] = array(
			 $contador--
			, $referencia
			, $nr_expediente
			, $nr_minutos_a
			, $nr_minutos_b
			, app_decimal_para_php($nr_percentual_a)
			, app_decimal_para_php($nr_percentual_b)
			, app_decimal_para_php($nr_meta)
			, $link 
		);
	}

	if( sizeof($media_ano)>0 )
	{
		$media = 0;
		foreach( $media_ano as $valor )
		{
			$media += $valor;
		}

		$media = number_format( ($media / sizeof($media_ano)), 2 );

		$body[] = array(
			0
			, '<b>Média de '.intval($tabela[0]['nr_ano_referencia']).'</b>'
			, ''
			, ''
			, ''
			, '<big><b>'.app_decimal_para_php( $media ).' %</b></big>'
			, ''
			, ''
			, ''
		);
	}

	echo "<input type='hidden' id='mes_input' name='mes_input' value='".$a_data[0]."' />";
	echo "<input type='hidden' id='contador_input' name='contador_input' value='".$contador_ano_atual."' />";

	$this->load->helper('grid');
	$grid = new grid();
	$grid->head = $head;
	$grid->body = $body;
	echo $grid->render();
}
?>
