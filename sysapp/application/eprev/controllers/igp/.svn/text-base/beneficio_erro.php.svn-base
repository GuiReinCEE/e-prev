<?php
class beneficio_erro extends Controller
{
    function __construct()
    {
        parent::Controller();
    }

    function index()
    {
		if(CheckLogin())
		{
	        $this->load->view( 'igp/beneficio_erro/index.php' );
		}
    }

    function listar()
    {
        if(CheckLogin())
        {
	        $this->load->model('igp/Beneficio_erro_model');

	        $data['collection'] = array();
	        $result = null;

	        // --------------------------
			// filtros ...

			$args=array();

