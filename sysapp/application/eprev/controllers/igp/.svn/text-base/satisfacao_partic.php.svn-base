	function detalhe($cd=0)
	{
		if(CheckLogin())
		{
			$this->load->model('igp/Satisfacao_partic_model');
			$row=$this->Satisfacao_partic_model->carregar( $cd );
			if($row)
			{ 
				if($cd==0)
				{
					$sql="SELECT to_char(dt_referencia + '1 month'::interval,'DD/MM/YYYY') AS mes_referencia, dt_referencia, nr_meta, nr_peso FROM igp.satisfacao_partic WHERE dt_exclusao IS NULL ORDER BY dt_referencia DESC LIMIT 1";
					$query = $this->db->query($sql);
					$row_atual = $query->row_array();

					$row['dt_referencia'] = $row_atual['mes_referencia'];
					$row['nr_meta'] = $row_atual['nr_meta'];
					$row['nr_peso'] = $row_atual['nr_peso'];
				}
				
				$data['row'] = $row; 
			}
			$this->load->view('igp/satisfacao_partic/detalhe', $data);
		}
	}

	function salvar()
	{
		if(CheckLogin())
		{
			$this->load->model('igp/Satisfacao_partic_model');
			
			$args['cd_satisfacao_partic']=intval($this->input->post('cd_satisfacao_partic', TRUE));
			$args["dt_referencia"] = $this->input->post("dt_referencia",TRUE);
			$args["cd_usuario_inclusao"] = usuario_id();

			$args["nr_satisfacao"] = app_decimal_para_db($this->input->post("nr_satisfacao",TRUE));
			$args["nr_meta"] = app_decimal_para_db($this->input->post("nr_meta",TRUE));
			$args["nr_peso"] = app_decimal_para_db($this->input->post("nr_peso",TRUE));

			$msg=array();
			$retorno = $this->Satisfacao_partic_model->salvar( $args,$msg );
			
			if($retorno)
			{
				redirect( "igp/satisfacao_partic", "refresh" );			
			}
			else
			{
				$mensagens = implode('<br>',$msg);
				exibir_mensagem($msg[0]);
			}

		}
	}

	function excluir($id)
	{
		if(CheckLogin())
		{
			$this->load->model('igp/Satisfacao_partic_model');

			$this->Satisfacao_partic_model->excluir( $id );

			redirect( 'igp/satisfacao_partic', 'refresh' );
		}
	}

